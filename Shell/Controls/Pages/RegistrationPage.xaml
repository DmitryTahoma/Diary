<UserControl x:Class="Shell.Controls.Pages.RegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Shell.Controls"
             xmlns:view="clr-namespace:Shell.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <view:RegistrationPageViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="1"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource ResourceKey=HeaderBlock}"
                       FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="0">
                Enter your name
            </TextBlock>
            <TextBox Style="{StaticResource ResourceKey=TransparentInput}"
                     FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="1">

            </TextBox>
            <TextBlock Style="{StaticResource ResourceKey=HeaderBlock}"
                       FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="2">
                Enter your email
            </TextBlock>
            <TextBox Style="{StaticResource ResourceKey=TransparentInput}"
                     FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="3">

            </TextBox>
            <TextBlock Style="{StaticResource ResourceKey=HeaderBlock}"
                       FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="4">
                Enter your password
            </TextBlock>
            <controls:RevealPasswordBox Grid.Row="5"
                                        DataContext="{Binding PasswordBoxContext}" />
            <TextBlock Style="{StaticResource ResourceKey=HeaderBlock}"
                       FontSize="{Binding PageFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Grid.Row="6">
                Confirm your password
            </TextBlock>
            <controls:RevealPasswordBox Grid.Row="7"
                                        DataContext="{Binding ConfirmPasswordBoxContext}"/>
        </Grid>
    </Grid>
</UserControl>